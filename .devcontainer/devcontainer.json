{
  "name": "mitm-env",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "postCreateCommand": "pip install -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "forwardPorts": [8080, 8081],
  "portsAttributes": {
    "8080": {
      "label": "mitmproxy",
      "onAutoForward": "public"
    },
    "8081": {
      "label": "mitmweb",
      "onAutoForward": "public"
    }
  }
}